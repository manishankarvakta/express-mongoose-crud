<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<!-- main -->
<div id="main">
    <div class="container">
        <div class="row my-5">
            <div class="col-md-3 col-6">
                <a href="/users" class="btn btn-outline-dark">
                    <i class="fas fa-arrow-left"></i>
                    All Users
                </a>
            </div>
            <div class="col-md-9 col-6">
                <h3 class="text-end text-uppercase">
                    <i class="fas fa-user-edit"></i>
                    Update User 
                </h3>
            </div>
        </div>
        <div class="row">
            <hr>
            <div class="col-md-8 offset-md-2">
                <form method="POST"  id="update" class="form my-3">
                    <div class="row mb-3">
                        <label for="nameInput" class="col-sm-2 col-form-label">Name</label>
                        <div class="col-sm-10">
                        <input type="hidden" name="id" id="id" value="<%= user._id %>">
                        <input type="text" class="form-control" value="<%= user.name %>" name="name" id="nameInput">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-10">
                        <input type="email" class="form-control" value="<%= user.email %>" name="email"  id="inputEmail">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
                        <div class="col-sm-10">
                        <input type="password" name="password" value="<%= user.password %>" class="form-control" id="inputPassword">
                        </div>
                    </div>
                    <fieldset class="row mb-3">
                        <legend class="col-form-label col-sm-2 pt-0">Gender</legend>
                        <div class="col-sm-10">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gender" id="male" value="Male" <%= user.gender == "Male"? 'checked':'' %>>
                            <label class="form-check-label" for="male">
                            Male
                            </label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gender" id="female" value="Female" <%= user.gender == "Female"? 'checked':'' %>>
                            <label class="form-check-label" for="female">
                            Female
                            </label>
                        </div>
                    </fieldset>
                    <div class="row mb-3">
                        <label for="status" class="col-sm-2 col-form-label">Status</label>
                        <div class="col-sm-10">
                        <select class="form-control" name="status" value="<%= user.status %>" id="status">
                            <option value="Active" class=""> Active</option>
                            <option value="Deactive" class=""> Deactive</option>
                        </select>
                        </div>
                    </div>
                    <button type="submit" class="col-3 offset-2 btn btn-outline-dark"><i class="fas fa-save"> </i> Save</button>
                </form>

            </div>
        </div>
    </div>
</div>
<!-- main -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->